<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="465.0" prefWidth="810.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.client.ui.controller.MainController">
    <MenuBar VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="%mode">
            <MenuItem mnemonicParsing="false" onAction="#showTable" text="%table"/>
            <MenuItem mnemonicParsing="false" onAction="#hideCanvas" text="%canvas"/>
        </Menu>
        <Menu mnemonicParsing="false" text="%language">
            <MenuItem mnemonicParsing="false" onAction="#russian" text="Русский"/>
            <MenuItem mnemonicParsing="false" onAction="#ukrainian" text="Ukrainian"/>
            <MenuItem mnemonicParsing="false" onAction="#macedonian" text="Macedonian"/>
            <MenuItem mnemonicParsing="false" onAction="#spanish" text="Spanish"/>
        </Menu>
        <Menu mnemonicParsing="false" text="%help">
            <MenuItem mnemonicParsing="false" onAction="#showHelp" text="%about"/>
        </Menu>
        <Menu mnemonicParsing="false" text="%logOut">
            <MenuItem mnemonicParsing="false" onAction="#logOut" text="%logOut"/>
        </Menu>
    </MenuBar>

    <HBox id="hboxHigh" prefHeight="36.0" prefWidth="810.0" stylesheets="@main.css">
        <Label fx:id="nickname" alignment="CENTER_RIGHT" prefHeight="19.0" prefWidth="168.0" text="Nickname"
               textAlignment="RIGHT" wrapText="true">
            <font>
                <Font size="15.0"/>
            </font>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
            <HBox.margin>
                <Insets bottom="5.0" top="5.0"/>
            </HBox.margin>
        </Label>
    </HBox>

    <SplitPane id="splitpane" dividerPositions="0.5" focusTraversable="true" maxHeight="1.7976931348623157E308"
               maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefHeight="451.0" prefWidth="799.0"
               stylesheets="@main.css">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <AnchorPane id="anchorpane" fx:id="pane" onDragDetected="#drag" onMouseReleased="#mouseReleased"
                    onScroll="#scroll" prefHeight="449.0" prefWidth="392.0">
            <Label alignment="CENTER" layoutX="134.0" layoutY="13.0" prefHeight="23.0" prefWidth="118.0"
                   text="%dragons">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <Pane layoutX="208.0" layoutY="12.0" onMouseClicked="#getDragon" prefHeight="200.0"
                  prefWidth="200.0"/>
            <Pane id="pane1" layoutX="25.0" layoutY="47.0" onMouseClicked="#getDragon" prefHeight="378.0"
                  prefWidth="351.0"/>
            <Canvas fx:id="canvasForSelection" blendMode="SRC_ATOP" disable="true" height="380.0" layoutX="25.0"
                    layoutY="47.0" onDragDetected="#drag" onMouseClicked="#getDragon" width="351.0"/>
            <Canvas fx:id="canvas" blendMode="SRC_ATOP" disable="true" height="380.0" layoutX="25.0"
                    layoutY="47.0" onDragDetected="#drag" onMouseClicked="#getDragon" width="351.0"/>
            <TableView fx:id="table" layoutX="24.0" layoutY="47.0" onMouseClicked="#getDragonFromTable"
                       prefHeight="380.0" prefWidth="351.0" stylesheets="@main.css"/>
        </AnchorPane>
        <AnchorPane id="anchorPane2" prefHeight="508.0" prefWidth="400.0">
            <Label alignment="CENTER" layoutX="79.0" layoutY="13.0" prefHeight="23.0" prefWidth="232.0"
                   style="&#10;" text="%desk" textAlignment="CENTER">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <Label alignment="CENTER" layoutX="119.0" layoutY="48.0" prefHeight="19.0" prefWidth="150.0"
                   text="%command" wrapText="true">
                <font>
                    <Font size="15.0"/>
                </font>
            </Label>
            <ComboBox fx:id="commandsList" layoutX="119.0" layoutY="84.0" prefWidth="150.0"
                      promptText="%action">
                <items>
                    <FXCollections fx:factory="observableArrayList">

                    </FXCollections>
                </items>
            </ComboBox>
            <Pane layoutX="-4.0" layoutY="121.0" prefHeight="330.0" prefWidth="400.0">
                <Label alignment="CENTER" layoutX="139.0" layoutY="5.0" prefHeight="19.0" prefWidth="118.0"
                       text="%dragon">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER" layoutX="19.0" layoutY="45.0" prefHeight="17.0" prefWidth="150.0"
                       text="%general"/>
                <TextField fx:id="humanName" layoutX="11.0" layoutY="69.0" promptText="%name"/>
                <TextField fx:id="humanAge" layoutX="11.0" layoutY="108.0" promptText="%age"/>
                <Label alignment="CENTER" layoutX="223.0" layoutY="45.0" prefHeight="17.0" prefWidth="150.0"
                       text="%location"/>
                <TextField layoutX="214.0" layoutY="69.0" promptText="%xCoordinate" fx:id="xCoordinate"/>
                <TextField fx:id="yCoordinate" layoutX="214.0" layoutY="108.0" promptText="%yCoordinate"/>
                <Button alignment="CENTER" defaultButton="true" layoutX="213.0" layoutY="284.0"
                        mnemonicParsing="false" onAction="#submit" prefHeight="23.0" prefWidth="72.0"
                        style="-fx-background-color: rgba(0,0,0,0.08),         linear-gradient(#5a61af, #51536d),         linear-gradient(#e4fbff 0%,#cee6fb 10%, #a5d3fb 50%, #88c6fb 51%, #d5faff 100%); -fx-text-fill: #242d35; -fx-font-size: 12px; -fx-background-radius: 5,5,4;"
                        text="%submit" textFill="#367c05"/>

                <Button alignment="CENTER" cancelButton="true" layoutX="107.0" layoutY="284.0"
                        mnemonicParsing="false"
                        onAction="#clear" prefHeight="23.0" prefWidth="72.0"
                        style="-fx-background-color: rgba(0,0,0,0.08),         linear-gradient(#9a9a9a, #909090),         linear-gradient(white 0%, #f3f3f3 50%, #ececec 51%, #f2f2f2 100%); -fx-text-fill: #242d35; -fx-font-size: 12px; -fx-background-radius: 5,5,4;"
                        text="%clear" textFill="#da1c1c"/>

                <Pane layoutY="147.0" prefHeight="122.0" prefWidth="392.0">
                    <Label alignment="CENTER" layoutX="20.0" layoutY="9.0" prefHeight="17.0" prefWidth="150.0" text="%skill"/>
                    <TextField fx:id="skillName" layoutX="12.0" layoutY="34.0" promptText="%name"/>
                    <TextField fx:id="skillInfo" layoutX="12.0" layoutY="76.0" promptText="%info"/>
                    <Label alignment="CENTER" layoutX="240.0" layoutY="9.0" prefHeight="17.0" prefWidth="118.0" text="%size" textAlignment="CENTER"/>
                    <Label alignment="CENTER_RIGHT" layoutX="245.0" layoutY="81.0" maxHeight="-Infinity"
                           maxWidth="-Infinity" prefHeight="17.0" prefWidth="81.0" text="%pickedSize"
                           textAlignment="CENTER" wrapText="true"/>

                    <Label fx:id="labelSize" layoutX="327.0" layoutY="81.0" text="1"/>
                </Pane>
                <Slider fx:id="slider" blockIncrement="1.0" layoutX="229.0" layoutY="182.0" majorTickUnit="1.0"
                        max="3.0" minorTickCount="0" showTickLabels="true" showTickMarks="true"
                        snapToTicks="true"/>
            </Pane>
        </AnchorPane>
    </SplitPane>
</VBox>
